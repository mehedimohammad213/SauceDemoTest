# Sauce Demo Automation - Environment Variables
# Copy this file to .env and update with your values

# ============================================
# Application URLs
# ============================================
BASE_URL=https://www.saucedemo.com

# ============================================
# Test User Credentials
# ============================================
# Standard User
STANDARD_USER_USERNAME=standard_user
STANDARD_USER_PASSWORD=secret_sauce

# Locked Out User
LOCKED_OUT_USER_USERNAME=locked_out_user
LOCKED_OUT_USER_PASSWORD=secret_sauce

# Problem User
PROBLEM_USER_USERNAME=problem_user
PROBLEM_USER_PASSWORD=secret_sauce

# Performance Glitch User
PERFORMANCE_GLITCH_USER_USERNAME=performance_glitch_user
PERFORMANCE_GLITCH_USER_PASSWORD=secret_sauce

# Error User
ERROR_USER_USERNAME=error_user
ERROR_USER_PASSWORD=secret_sauce

# Visual User
VISUAL_USER_USERNAME=visual_user
VISUAL_USER_PASSWORD=secret_sauce

# ============================================
# Test Configuration
# ============================================
# Test execution settings
TEST_TIMEOUT=30000
EXPECT_TIMEOUT=10000
ACTION_TIMEOUT=10000
NAVIGATION_TIMEOUT=30000

# Retry settings
RETRIES=0
RETRIES_CI=2

# Workers (parallel execution)
WORKERS=undefined
WORKERS_CI=1

# ============================================
# Browser Configuration
# ============================================
VIEWPORT_WIDTH=1536
VIEWPORT_HEIGHT=816
BROWSER=chromium

# Locale and Timezone
LOCALE=en-US
TIMEZONE=America/New_York

# ============================================
# Reporting Configuration
# ============================================
# Enable/disable reporters
ENABLE_HTML_REPORTER=true
ENABLE_JSON_REPORTER=true
ENABLE_JUNIT_REPORTER=true

# Screenshot and video settings
SCREENSHOT_ON_FAILURE=true
VIDEO_ON_FAILURE=true
TRACE_ON_RETRY=true

# ============================================
# CI/CD Configuration
# ============================================
# Set to true in CI environment
CI=false

# ============================================
# Debug Configuration
# ============================================
# Enable debug mode
DEBUG=false
HEADED=false

# ============================================
# Additional Settings
# ============================================
# Ignore HTTPS errors
IGNORE_HTTPS_ERRORS=true
